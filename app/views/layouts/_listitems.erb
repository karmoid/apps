<% if (defined? items) && (! items.nil?) && (items.count > 0) %>
  <div class="col-lg-4">
    <div class="bs-component">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><span class="badge"></span> <%= (defined? toptitle) ? toptitle : items.first.class.humanize_model(true) %> <span class="badge"><%= items.count %></span></h3>
        </div>
        <div class="list-group">
          <% items.each do |r| %>
            <% locals = {element: r} %>
            <% locals.merge(puts_date: puts_date.to_sym) if (defined? puts_date) %>
            <% if (defined? r.url) && (! r.url.nil?) %>
              <div class="row">
                <div class="col-lg-10">
                  <div class="bs-component">
                    <%= render(partial: "/layouts/itemsimple", locals: locals) %>
                  </div>
                </div>
                <div class="col-lg-1">
                  <div class="bs-component">
                    <div class="btn-group">
                      <%= link_to r.url, class: "list-group-item", :target => "_blank" do %>
                        <h5 class="list-group-item-text"><span class="glyphicon glyphicon-share"></span></h5>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% else %>
              <%= render(partial: "/layouts/itemsimple", locals: locals) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
